{
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "tailwindCSS.classAttributes": [
    "class",
    "className",
    "theme"
  ],
  "tailwindCSS.experimental.classRegex": [
    [
      "twMerge\\(([^)]*)\\)",
      "[\"'`]([^\"'`]*).*?[\"'`]"
    ],
    [
      "createTheme(?:<\\w+>)?\\s*\\(([^)]*)\\)",
      "{?\\s?[\\w].*:\\s*?[\"'`]([^\"'`]*).*?,?\\s?}?"
    ]
  ],
  // ---------- Formatting ----------
  "editor.formatOnSave": true,
  "[markdown]": {
    "editor.wordWrap": "on",
    "editor.quickSuggestions": {
      "comments": "off",
      "strings": "off",
      "other": "off"
    }
  },
  // ---------- ESLint ----------
  "eslint.enable": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  // ---------- Prettier ----------
  "prettier.requireConfig": true,
  // ---------- Spell Checker (cSpell) ----------
  "cSpell.dictionaryDefinitions": [
    {
      "name": "webudget-terms",
      "path": "./cspell.json"
    }
  ],
  "cSpell.dictionaries": [
    "webudget-terms"
  ],
  // ---------- Docker ----------
  "docker.composeCommand": "docker compose",
  "docker.enableDockerComposeLanguageService": true,
  "containers.composeCommand": "docker compose",
  "containers.enableComposeLanguageService": true
}