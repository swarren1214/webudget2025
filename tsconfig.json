{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": "server"
  },
  "include": ["server/**/*", "server/src/types/**/*"],
  "exclude": ["node_modules", "dist"]
}